# Server Configuration
NODE_ENV=development
PORT=3000
HOST=0.0.0.0
LOG_LEVEL=info
CORS_ORIGIN=http://localhost:5173

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/chatsparty

# AI Model Providers
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# Azure OpenAI Configuration
AZURE_API_KEY=your-azure-openai-api-key
AZURE_RESOURCE_NAME=your-azure-resource-name

# Mastra Configuration
MASTRA_API_KEY=your-mastra-api-key

# Storage Configuration
STORAGE_PROVIDER=local
STORAGE_PATH=./storage

# AWS S3 Configuration (if using S3)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=your-bucket-name

# Cloudflare R2 Configuration (if using R2)
# R2_ACCOUNT_ID=your-account-id
# R2_ACCESS_KEY_ID=your-access-key
# R2_SECRET_ACCESS_KEY=your-secret-key
# R2_BUCKET=your-bucket-name

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Default Connection Configuration
# This provides a fallback connection for agents when no specific connection is set
DEFAULT_CONNECTION_ENABLED=false
DEFAULT_CONNECTION_PROVIDER=vertex_ai
DEFAULT_CONNECTION_MODEL=gemini-pro
# DEFAULT_CONNECTION_API_KEY=your-api-key (for providers that require API key)
# For Vertex AI specific configuration:
# DEFAULT_CONNECTION_PROJECT_ID=your-gcp-project-id
# DEFAULT_CONNECTION_LOCATION=us-central1
# DEFAULT_CONNECTION_BASE_URL=https://us-central1-aiplatform.googleapis.com
# For Azure OpenAI specific configuration:
# DEFAULT_CONNECTION_RESOURCE_NAME=your-azure-resource-name
# DEFAULT_CONNECTION_API_VERSION=2024-10-01-preview